<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.deesoft.serviceplatform">

    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 8.0手机安装软件 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" /> <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 用于获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- 用于访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- 用于写入缓存数据到扩展存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 软件安装需要权限，读取安装包 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 用于申请调用A-GPS模块 -->
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" /> <!-- 用于申请获取蓝牙信息进行室内定位 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.os.NetworkOnMainThreadException" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 定位 -->
    <!-- 用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" >
    </uses-permission>
    <!-- 用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".HelperEditActivity"
            android:label="编辑助老员"></activity>
        <activity
            android:name=".AdminAreaActivity"
            android:label="片区管理平台" />
        <activity
            android:name=".HelperDetailActivity"
            android:label="助老员信息" />
        <activity
            android:name=".OrderDetailActivity"
            android:label="工单信息" />
        <activity
            android:name=".OlderDetailActivity"
            android:label="老人信息" />
        <activity
            android:name=".AdminInfoActivity"
            android:label="管理员信息" />
        <activity android:name=".AdminMenuActivity" />
        <activity android:name=".AdminLogActivity" />
        <activity
            android:name=".HelperListActivity"
            android:label="助老员列表" />
        <activity
            android:name=".OrderListActivity"
            android:label="工单列表" />
        <activity
            android:name=".OlderListActivity"
            android:label="老人列表" />

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="f46f89c09eec35b6e020e491a91d162a" />
        <meta-data
            android:name="circle_dialog_design_width"
            android:value="1080" />
        <meta-data
            android:name="circle_dialog_design_height"
            android:value="1920" />

        <activity
            android:name=".WelcomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="cn.deesoft.serviceplatform.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".BootCompletedReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <service
            android:name=".LocalService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name=".RomoteService"
            android:enabled="true"
            android:exported="true"
            android:process=":romote" />
        <service android:name="com.amap.api.location.APSService" />

        <activity
            android:name=".MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FirstPage" />
        <activity
            android:name=".ServiceObjectActivity"
            android:label="选择服务对象"
            android:screenOrientation="portrait" />
        <activity android:name=".ServiceCategoryActivity" />
        <activity
            android:name=".EndServiceActivity"
            android:label="结束服务"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StartServiceActivity"
            android:label="确认服务信息"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HelperInfoActivity"
            android:label="个人信息"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkOrderActivity"
            android:label="工单月报表明细"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WorkOrderMonthActivity"
            android:label="工单月报表"
            android:screenOrientation="portrait"
            android:theme="@style/PageTheme" />
        <activity
            android:name=".MainActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <service
            android:name=".LocationForegoundService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>