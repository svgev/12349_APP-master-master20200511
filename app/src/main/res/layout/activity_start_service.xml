<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    tools:context=".StartServiceActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="66dp"
        android:layout_height="66dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPhoto"
            android:src="@mipmap/nophoto"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/usericon_circle" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtServiceObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王祖国"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIsLiving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(在世)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:visibility="invisible"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/txtAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24岁"
                android:textSize="17sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtNavigation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="位置导航"
                    android:textColor="#317D6D"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imgNavigation"
                    android:layout_width="19dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="1dp"
                    android:background="@mipmap/navigation3"
                    android:visibility="invisible"
                    android:scaleType="fitXY"
                    android:textColor="#317D6D"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="2dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtOldRemainTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="剩余服务时间："
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtRemainTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:text="1"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分钟"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
   <!-- <LinearLayout
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="#afafaf"
        android:visibility="visible"></LinearLayout>-->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="31dp"
    android:text="服务内容"
    android:textSize="18sp"
    android:textColor="@color/txtcolor"/>
    <GridView
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:numColumns="2" />
    <Button
        android:id="@+id/btnStartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_shape"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="开始服务"
        android:textColor="@color/ic_launcher_background"
        android:textSize="24sp" />
</LinearLayout>