<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AdminLogActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="fill">


        <LinearLayout
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@mipmap/admin_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/background"
                    android:visibility="invisible"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="德清县智慧养老"
                        android:textSize="31dp"
                        android:visibility="gone"
                        android:textColor="#9e3d11"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="片区管理平台"
                        android:textColor="#9e3d11"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:visibility="gone"
                        android:textSize="33dp"
                        />
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>




        <LinearLayout
            android:id="@+id/adminName"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AdminName_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帐  号："
                android:textSize="22sp"
                android:textColor="#2C2C2C"/>

            <EditText
                android:id="@+id/txtAdminName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入用户名"
                android:background="@drawable/edittext_bk"
                android:textColorHint="#949494"
                android:textColor="#2C2C2C"
                android:inputType="text"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adminPassword"
            android:layout_width="230dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AdminPassword_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="密  码："
                android:textColor="#2C2C2C"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/txtAdminPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"
                android:textColorHint="#949494"
                android:background="@drawable/edittext_bk"
                android:textSize="21sp"
                android:textColor="#2C2C2C"
                android:inputType="textPassword"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAdmin"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/ic_launcher_background"
                android:textSize="26sp"
                tools:text="@string/login" />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/helperLoginTxt"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="#00000000"
                    android:clickable="true"
                    android:text="助老员登陆"
                    android:textColor="@color/cannotlogin"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:background="#00000000"
                    android:clickable="true"
                    android:gravity="center|right"
                    android:text="@string/cannotlogin"
                    android:textColor="@color/cannotlogin"
                    android:textSize="16sp"
                    tools:text="@string/cannotlogin" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="德清县12349便民服务中心"
                tools:text="德清县12349便民服务中心" />

            <TextView
                android:id="@+id/txtCannotLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="服务热线：12349"
                tools:text="服务热线：12349" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
