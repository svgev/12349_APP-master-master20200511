<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myScrollView">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="0dp"
            >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@mipmap/adminback6">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="67dp"
                    android:layout_height="62dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="26dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="27dp"
                    android:text="用户名："
                    android:textSize="17dp" />
                <TextView
                    android:id="@+id/txtAdminName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="176dp"
                    android:layout_marginTop="26dp"
                    android:text="admin"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/txtRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="57dp"
                    android:text="片区管理员"
                    android:textSize="17dp" />
                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true">
                <!--<TextView
                    android:id="@+id/txtDetail"
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/detail"
                    android:textSize="22dp" />--></LinearLayout>
            </RelativeLayout>

        </RelativeLayout>



    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="0dp"
        android:text="管理范围"
        android:background="@mipmap/adminback7"
        android:textSize="19dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:background="#D0D0D0">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnListLayout"
        android:orientation="vertical"
        android:layout_width="650px"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        >

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:gravity="bottom"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="德清12349便民服务中心"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="服务热线：12349"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
