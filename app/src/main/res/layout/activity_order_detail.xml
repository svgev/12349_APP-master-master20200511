<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/img"
        android:layout_width="390dp"
        android:layout_height="0dp"
        android:layout_marginLeft="28dp"
        android:layout_weight="2.5"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="4dp"
          android:layout_marginTop="0dp">

            <Util.CircleImageView
                android:id="@+id/helperImage"
                android:layout_width="62dp"
                android:layout_height="61dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/background_light" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="0dp"
              android:text=""
              android:layout_gravity="center_horizontal"
              android:textSize="2sp"
              />
          <TextView
              android:id="@+id/txtHelperName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="3dp"
              android:text="高乾辉"
              android:textSize="16sp"
              android:textStyle="bold" />
      </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="40dp"
                android:orientation="vertical">

                <!--工单编号-->
                <RelativeLayout
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="工单号:"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="73dp"
                        android:layout_marginTop="0dp"
                        android:text="21"
                        android:textSize="16sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        android:text="服务老人:"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtOlderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="0dp"
                        android:text="房阿子"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="服务状态:"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/txtWorkStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:layout_marginTop="0dp"
                        android:text="结束"
                        android:textSize="16sp"/>》
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp">
                    <TextView
                        android:id="@+id/txtAddDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:text="2018-12-20T16:15:39"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>
            <!--老人姓名-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.07"
        android:background="@drawable/line_1"
        android:paddingBottom="0dp">
    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <LinearLayout

            android:layout_height="match_parent"
            android:layout_width="308dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <!--详细信息-->
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <TextView
                    android:layout_width="2.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:text=""
                    android:background="#317D6D"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="6dp"
                    android:text="详细信息"
                    android:textColor="#317D6D"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="4dp"
                    android:text="结算状态:"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtBillingStatus"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:text="待结"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp"
                    android:text="服务名称:"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/txtServiceName"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:text="老人上门关爱服务"
                    android:textSize="16sp" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="4dp"
                    android:text="服务内容:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtWorkContent"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:text="保洁,心灵慰藉,干家务,保洁,心灵慰藉,干家务"
                    android:textSize="16sp" />

            </RelativeLayout>

            <!--<LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="照片："
                    android:layout_marginLeft="4dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="8dp"
                    android:background="@color/black"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>-->



            <!--开始时间-->
            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp"
                    android:text="开始时间:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:text="2018-12-21 14:58:39.000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp"
                    android:text="结束时间:"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:text="2018-12-21 14:58:39.000"
                    android:textSize="15sp" />
            </RelativeLayout>
            <!--服务总时长-->
            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp"
                    android:text="总时长:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txtWorkInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:text="61分钟"
                    android:textSize="17sp" />》
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="4dp"
                    android:text="结算:"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txtWorkFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/price"
                    android:text="26元"
                    android:textSize="19sp" />》
            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>




</LinearLayout>